<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div>Title</div>
  <%= f.text_field :title %>

  <div>Body</div>
  <%= f.text_area :body %>

  <p></p>
  <%= f.submit 'Update Book' %>

  <p></p>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>

<% end %>